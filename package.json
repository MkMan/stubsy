{
  "name": "stubsy",
  "version": "1.0.0",
  "description": "A mock server that ships with a UI to allow configuration during runtime.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "build-server:watch": "tsc -p ./tsconfig-server.json -w --preserveWatchOutput",
    "build-server": "tsc -p ./tsconfig-server.json",
    "build-ui:watch": "parcel watch --public-url /Stubsy/ --out-dir dist/ui src/ui/index.html",
    "build-ui": "parcel build --public-url /Stubsy/ --out-dir dist/ui src/ui/index.html",
    "build": "pnpm build-server && pnpm build-ui",
    "format": "prettier --write ./**/*.{ts,tsx,scss,html} && eslint --fix . --ext .ts,.tsx",
    "prepare": "husky install",
    "start": "pnpm build-server && concurrently -k 'pnpm build-server:watch' 'pnpm build-ui:watch' 'nodemon --exec \"ts-node\" ./demo.ts'",
    "test:e2e": "concurrently -k -s first 'pnpm start' 'wait-on http://localhost:3000/Stubsy && pnpm cypress run'",
    "test:e2e:watch": "concurrently -k 'pnpm start' 'pnpm cypress open'",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch"
  },
  "keywords": [
    "mock",
    "server",
    "node",
    "express"
  ],
  "author": "Mustafa Mansour",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/MkMan/stubsy"
  },
  "dependencies": {
    "body-parser": "1.20.0",
    "express": "4.18.1"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@material-ui/core": "4.11.4",
    "@material-ui/icons": "4.11.2",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@types/body-parser": "1.19.0",
    "@types/cors": "2.8.10",
    "@types/express": "4.17.11",
    "@types/jest": "26.0.23",
    "@types/react": "17.0.5",
    "@types/react-dom": "17.0.5",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "concurrently": "6.1.0",
    "cypress": "10.2.0",
    "eslint": "7.26.0",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "6.0.0",
    "jest": "27.5.1",
    "jest-watch-typeahead": "1.1.0",
    "lint-staged": "11.0.0",
    "markdownlint": "0.23.1",
    "markdownlint-cli": "0.27.1",
    "nodemon": "2.0.7",
    "parcel-bundler": "1.12.5",
    "prettier": "2.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "semantic-release": "17.4.3",
    "ts-jest": "27.0.2",
    "ts-node": "9.1.1",
    "typescript": "4.3.2",
    "wait-on": "6.0.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.{js,ts,tsx,scss,json,html}": "prettier --write",
    "*.md": "markdownlint --fix"
  }
}
